<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h1 >Productos</h1>
		</div>
		<div class="text-right">
			<%= link_to "Nuevo Producto", new_product_path, class:"btn btn-primary btn-lg btn-right" %>
		</div>
		
		<table class="table">
		<thead>
			<tr>
				<th>Nombre</th>
				<th>Precio</th>
				<th>Categoria</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @products.each do |producto| %>
				<tr>
					<td><%= producto.name %></td>
					<td><%= producto.price %></td>
					<td>
						<% producto.categorys.each do |categoria|%>
							<% if producto.categorys.last == categoria %>
								<%= categoria.name %>
							<% else %>
								<%= categoria.name + ","%>
							<% end %>						
						<% end %>						
					</td>
					<td>
						<%= link_to "Editar", edit_product_path(producto) %>
						<%= link_to "Eliminar", producto, :method => :delete %>
					</td>
				</tr>
			<% end %>
		</tbody>
		</table>
	</div>	
</div>